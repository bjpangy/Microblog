<form class="form-horizontal" method="post" action="/reg">
    <fieldset>
        <legend>User registeration</legend>
        <div class="control-group">
            <label class="control-label" for="username">user name</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="username" name="username">
                <p class="help-block">your name, for login and display</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="passowrd">password</label>
            <div class="control">
                <input type="password" class="input-xlarge" id="password" name="password">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="repeat passowrd-repeat">repeat password</label>
            <div class="control">
                <input type="password" class="input-xlarge" id="password-repeat" name="password-repeat">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </fieldset>
</form>
